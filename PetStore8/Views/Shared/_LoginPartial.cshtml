@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    @if (User.IsInRole("Admin"))
    {
        <li>@Html.ActionLink("Register Employee", "RegisterEmployee", "Account", routeValues: null, htmlAttributes: new { id = "registerLink1" })</li>
        <li>@Html.ActionLink("Role Management", "Index", "Roles", routeValues: null, htmlAttributes: new { id = "registerLink3" })</li>
    }
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {        
        <li>@Html.ActionLink("Revenue", "Index", "Revenue", routeValues: null, htmlAttributes: new { id = "registerLink4" })</li>
    }
    <li>
        @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register Customer", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink2" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
